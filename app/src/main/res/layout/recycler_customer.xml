<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp">

    <RelativeLayout
        android:id="@+id/recyclerViewAllCustomer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relativeLayoutCustomerOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/itemCustomerId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imgEditCustomer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="16dp"
                android:src="@drawable/ic_edit_black_24dp" />

            <ImageView
                android:id="@+id/imgAddressCustomer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_toLeftOf="@+id/imgDeleteCustomer"
                android:layout_toRightOf="@+id/imgEditCustomer"
                android:src="@drawable/ic_location_on_black_24dp" />

            <ImageView
                android:id="@+id/imgDeleteCustomer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="15dp"
                android:src="@drawable/ic_delete_black_24dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/itemCustomerName"
                style="@style/Widget.AppCompat.Light.ActionBar.TabText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgAddressCustomer"
                android:gravity="center"
                android:text="@string/nome_usuario" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/itemCustomerCpf"
                style="@style/Widget.AppCompat.Light.ActionBar.TabText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itemCustomerName"
                android:gravity="center"
                android:text="@string/cpf_usuario" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayoutCustomerTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayoutCustomerOne">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/itemCustomerEmail"
                style="@style/Widget.AppCompat.Light.ActionBar.TabText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/email_usuario" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/itemCustomerTelephone"
                style="@style/Widget.AppCompat.Light.ActionBar.TabText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itemCustomerEmail"
                android:gravity="center"
                android:text="@string/telefone_usuario" />

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>