<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/recyclerViewAllCustomer"
        android:layout_width="match_parent"
        android:background="@drawable/border"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/relativeLayoutCustomerOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/imgEditCustomer"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_edit_black_24dp"
                android:layout_margin="16dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:id="@+id/imgAddressCustomer"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_toLeftOf="@+id/imgDeleteCustomer"
                android:src="@drawable/ic_location_on_black_24dp"
                android:layout_toRightOf="@+id/imgEditCustomer"
                android:layout_margin="15dp" />

            <ImageView
                android:id="@+id/imgDeleteCustomer"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_delete_black_24dp"
                android:layout_margin="15dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/itemCustomerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgAddressCustomer"
                android:layout_gravity="right"
                android:layout_margin="16dp"
                android:layout_marginTop="-32dp"
                android:background="@drawable/border_bottom"
                android:gravity="center|left"
                android:text="@string/nome_usuario" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/itemCustomerCpf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom"
                android:layout_below="@+id/itemCustomerName"
                android:layout_margin="16dp"
                android:gravity="center|left"
                android:text="@string/cpf_usuario" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayoutCustomerTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayoutCustomerOne">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/itemCustomerEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/border_bottom"
                android:text="@string/email_usuario" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/itemCustomerTelephone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/border_bottom"
                android:layout_below="@+id/itemCustomerEmail"
                android:text="@string/telefone_usuario" />

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>