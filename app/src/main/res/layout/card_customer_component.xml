<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="customerDto"
            type="com.example.controlsales.dto.CustomerDto" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <RelativeLayout
            android:id="@+id/recyclerViewAllCustomer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey">

            <TextView
                android:id="@+id/itemCustomerId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imgEditCustomer"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="16dp"
                android:src="@drawable/ic_edit_black_24dp" />

            <ImageView
                android:id="@+id/imgAddressCustomer"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_margin="15dp"
                android:layout_toStartOf="@+id/imgDeleteCustomer"
                android:layout_toLeftOf="@+id/imgDeleteCustomer"
                android:layout_toEndOf="@+id/imgEditCustomer"
                android:layout_toRightOf="@+id/imgEditCustomer"
                android:src="@drawable/ic_location_on_black_24dp" />

            <ImageView
                android:id="@+id/imgDeleteCustomer"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="15dp"
                android:src="@drawable/ic_delete_black_24dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/imgDeleteCustomer"
                android:src="@drawable/line" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/itemCustomerName"
                style="@style/Widget.AppCompat.Light.ActionBar.TabText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgAddressCustomer"
                android:background="@drawable/line"
                android:gravity="center"
                android:text="@{customerDto.name}" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/itemCustomerCpf"
                style="@style/Widget.AppCompat.Light.ActionBar.TabText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itemCustomerName"
                android:gravity="center"
                android:text="@{customerDto.cpf}" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</layout>